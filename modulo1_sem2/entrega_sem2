def determine_pass_status():
    grade = float(input("Ingresar una calificacion entre 0 a 100: "))
    if grade >= 60:
        print("aprobado!")
    else:
        print("reprobado")

def calculate_average():
    grades_input = input("Ingresa las calificaciones separadas por coma: ")
    grades = [float(x) for x in grades_input.split(",")]
    average = sum(grades) / len(grades)
    print("El promedio es: ", average)


def count_greater_than():
    threshold = float(input("Ingresa un valor para comprar: "))
    grades_input = input("Ingresa las calificaciones separadas por comas: ")
    grades = [float(x) for x in grades_input.split(",") ]
    count = sum(1 for grade in grades if grade > threshold)
    print("Hay",count, "calificaiones mayores que", threshold)


